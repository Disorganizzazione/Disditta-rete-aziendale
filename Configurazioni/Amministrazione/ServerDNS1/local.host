# File per la risoluzione diretta di localhost
$TTL 1D
$ORIGIN localhost
# "@  root" viene espanso in "localhost  root.localhost"
@	1D	IN	SOA	@	root (
				2014112501   ; serial#
				3H           ; refresh, seconds
				1H           ; retry, seconds
				1W           ; expire, seconds
				1D )         ; minimum, seconds
@	1D	IN	NS	@
	1D	IN	A	127.0.0.1
